@model IEnumerable<EmployeeViewModel>

<h3 class="display-4"><b>Employee Management system</b></h3>
<p style="text-align:center"></p>
<body style="background-color:ButtonFace">
<button class="btn btn-success employeeInsert" data-toggle="modal" data-target="#myModal"> Create New Employee</button>
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

        @* Modal content*@
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Employee Details</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form id="createNewEmployee">
                    <label>Name:</label><br>
                    <input type="text" style="width:100%" id="txtName" placeholder="Enter Your Name" pattern="[A-Za-z\s\.]{1,20}" required name="name"><br>
                    <label>Department:</label><br>
                    <select type="text" name="Dept" id="txtDepartment" placeholder="Enter Your Department"  required style="width:100%">
                        <option value="Choose your Option">Choose your Option</option>
                        <option value="Testing">Testing</option> 
                        <option value="Developer">Developer</option>
                        <option value="Finance">Finance</option>
                        <option value="Accountant">Accountant</option>
                        <option value="HR">HR</option>
                    </select><br>
                    <label>Age:</label><br>
                    <input type="number" style="width:100%" id="txtAge" min="21" max="40" placeholder="Enter Your Age"  required name="age"><br>
                    <label>Address:</label><br>
                    <input type="text" style="width:100%" id="txtAddress" placeholder="Enter Your Address"  required name="address"><br><br><br>
                    <input type="submit" value="create" id="btnSave">
                </form>

            </div>

        </div>

    </div>
</div>
<table class="table table-bordered">

    <thead>
        <tr>

            <td>
                <b>ID</b>
            </td>
            <td>
                <b>Name</b>
            </td>
            <td>
                <b>Department</b>
            </td>
            <td>
                <b>Action </b>
            </td>
            @*<td>
            <b>Address</b>
        </td>
        <td>
            <b>Action</b>
        </td>*@
        </tr>
        <tr>
            @*<td>
                <input type="text" id="txtName" />
            </td>
            <td>
                <input type="text" id="txtDepartment" />
            </td>
            <td>
                <input type="text" id="txtAge" />
            </td>
            <td>
                <input type="text" id="txtAddress" />
            </td>*@
            @*<td>
                <button id="btnSave">Save</button>
                <input type="hidden" value="0" id="hdnId" />
            </td>*@

        </tr>

    </thead>
    @foreach (var employee in Model)
    {
<tr>
    <td>@employee.Id</td>
    <td>@employee.Name</td>
    <td>@employee.Department</td>
    <td>
        <button class="btn btn-primary employeeDetails" data-id="@employee.Id"> Details</button>
        <button class="btn btn-info employeeEdit" data-toggle="modal" data-target="#myModals" data-id="@employee.Id"> Edit</button>
        <button class="btn btn-danger employeeDelete" data-id="@employee.Id"> Delete</button>
    </td>
</tr>}
</table>
<div class="modal fade" id="myModals" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Employee Edit</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form >
                    @*<label>Id:</label><br>*@
                    <input type="hidden" style="width:100%" id="editid" min="1" required name="id"  /><br>
                    <label>Name:</label><br>
                    <input type="text" style="width:100%" id="editname" required name="name" /><br>
                    <label>Department:</label><br>
                    <select type="text" name="Dept" id="editdept" required style="width:100%">
                      <option value="Choose your Option">Choose your Option</option>
                      <option value="Testing">Testing</option>
                      <option value="Developer">Developer</option>
                      <option value="Finance">Finance</option>
                      <option value="Accountant">Accountant</option>
                      <option value="HR">HR</option>
                     </select><br>
                    <label>Age:</label><br>
                    <input type="number" style="width:100%" id="editage"  min="21" max="40" required name="age" /><br>
                    <label>Address:</label><br>
                    <input type="text" style="width:100%" id="editaddress" required name="address" /><br><br><br>
                    <input type="submit" value="Submit" id="update" />
                </form>
            </div>
        </div>


    </div>
</div>

<div id="EmployeeCard">

</div>
</body>

@section Scripts{
    <script src="~/js/employee.js"></script>
}
