@model IEnumerable<EmployeeViewModel>

<h3 class="display-4">Employees</h3>
<button class="btn btn-success"> Create New Employee</button>
<table class="table table-bordered">
    <thead>
        <tr>

            <td>
                <b>Name</b>
            </td>
            <td>
                <b>Department</b>
            </td>
            <td>
                <b>Age</b>
            </td>
            <td>
                <b>Address</b>
            </td>
            <td>
                <b>Action</b>
            </td>
        </tr>
        <tr>
            <td>
                <input type="text" id="txtName" />
            </td>
            <td>
                <input type="text" id="txtDepartment" />
            </td>
            <td>
                <input type="text" id="txtAge" />
            </td>
            <td>
                <input type="text" id="txtAddress" />
            </td>
            <td>
                <button id="btnSave">Save</button>
                <input type="hidden" value="0" id="hdnId"/>
            </td>

        </tr>

    </thead>
    @foreach (var employee in Model)
    {
        <tr>
            <td>@employee.Id</td>
            <td>@employee.Name</td>
            <td>@employee.Department</td>
            <td>
                <button class="btn btn-primary employeeDetails" data-id="@employee.Id"> Details</button>
                <button class="btn btn-info employeeEdit" data-id="@employee.Id"> Edit</button>
                <button class="btn btn-danger employeeDelete" data-id="@employee.Id"> Delete</button>
            </td>
        </tr>
    }
</table>

<div id="EmployeeCard">
    
</div>


@section Scripts{
    <script src="~/js/employee.js"></script>
}
